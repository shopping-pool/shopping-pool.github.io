<% include ./partials/header %>
<link rel="stylesheet" href="../css/payments.css">
    <%var nprom = 0%>
    <%var nad = 0%>
    <%var njob = 0%>
    <%if(promoted!=null){%>
      <%for(cat in promoted){%>
      <%nprom +=Object.keys(promoted[cat]).length %>
      <%}%>
    <%}%>  
    <%if(advert != null){%>
      <%nad = Object.keys(advert).length%>
    <%}%> 

    <%if(job != null){%>
      <%njob = Object.keys(job).length%>
    <%}%>  
    <%var sum =njob*100 +nad*500 +nprom*100%>
<div class="col-sm-8">
  <table >
    <tr id="headings">
      <th>CATEGORY</th>
      <th>QUANTTITY</th>
      <th>RATE/MONTH</th>
      <th>TOTAL</th>
    </tr>
    <tr>
      <td>Promoted Products</td>
      <td><%=nprom%></td>
      <td>100</td>
      <td><%=nprom*100%></td>
    </tr>
    <tr>
      <td>Job Postings</td>
      <td><%=njob%></td>
      <td>100</td>
      <td><%=njob*100%></td>
    </tr>
    <tr>
      <td>Advertisements</td>
      <td><%=nad%></td>
      <td>500</td>
      <td><%=nad*500%></td>
    </tr>
    <tr id = "total">
      <td colspan="3"> Total</td>
      <td id  = "sum"><%=sum%></td>
    </tr>
  </table>
<div id="paypal-button-container"></div>
  
</div>



</div>
<!-- closed row -->
</div>
